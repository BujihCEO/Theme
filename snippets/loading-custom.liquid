{{ 'component-loading-spinner.css' | asset_url | stylesheet_tag }}

<script>
    var loadingContainer = document.createElement('div');
    loadingContainer.className = "{% if class %}{{ class }}{% else %}loading__spinner hidden{% endif %} LoadingCustom";

    var loadGif = document.createElement('div');
    loadGif.className = "loadGif";

    var loadMessage = document.createElement('div');
    loadMessage.className = "loadMessage";
    loadMessage.innerText = "Enviando para o carrinho...";

    loadingContainer.appendChild(loadGif);
    loadingContainer.appendChild(loadMessage);

    document.body.appendChild(loadingContainer);
</script>
