<head>
    <link rel="stylesheet" type="text/css" href="{{ 'illusion.css' | asset_url }}">
</head>
<div class="PickersTitle">Tamanho:</div>
<div class="ProductSizeBox"></div>
<div class="PickersTitle">Cor:</div>
<div class="ProductColorsBox"></div>
<div class="Scroll">
    <div class="Bg_Tshirt">
        <div class="Tshirt">
            <div class="Preview">
                <div class="Pr_Drag PrintTarget">
                    <div class="imgWrap">
                        <div class="ImgContainer"></div>
                        <div class="TextName">
                            nome
                        </div>
                    </div>
                    <div class="Star A1"></div>
                    <div class="Star A2"></div>
                    <div class="oval">
                    </div>
                    <div class="dateText">1997</div>
                    <div class="midBar"></div>
                    <div class="PrText">Legend</div>
                </div>
                <div class="ImgSelector">
                    <div class="ImgDragMove">
                    </div>
                    <div class="ImgSizeControl"></div>
                </div>
            </div>
            <div class="Zomm_Wrap">
                <div class="Zoom_Btn In"></div>
                <div class="Zoom_Btn Out selected"></div>
            </div>
            <div class="Pr_Border"></div>
        </div>
    </div>
    <div class="Personalization">
        <div class="WRAPBTNOPTIONS">
            <div class="BtnCustom BTNOPTIONS selected">Foto</div>
            <div class="BtnCustom BTNOPTIONS">Textos</div>
        </div>
        <div class="CustomContainer selected">
            <div class="UploadImgWrap">
                <div class="IconContainer">
                    <label class="iconInput" for="imgInput"></label>
                </div>
                <input class="imgInput"  id="imgInput" type="file" accept="image/*" oninput="loadNewImage()" style="display: none;">
            </div>
            <div class="ImgOptions">
                <div class="ImgEffect">
                    <div class="Tittle">Efeito</div>
                    <input type="range" class="Slider" min="0.01" max="1" value="0.50" step="0.01" oninput="imgBrightness()">
                </div>
                <label class="ImgInputLabel" for="imgInput">
                    Mudar imagem
                    <div></div>
                </label>
            </div>
        </div>
        <div class="CustomContainer">
            <div class="InputTextContainer">
                <div class="Tittle">Nome</div>
                <input class="InputText_1" type="text" placeholder="Escreva aqui..">
            </div>
            <div class="InputTextContainer">
                <div class="Tittle">Data</div>
                <input class="InputText_2" type="number" placeholder="Escreva aqui..">
            </div>
        </div>
    </div>
</div>
<input class="InputPrint" style="display: none;" type="file" form="{{ 'product-form-' | append: section.id }}" name="properties[Estampa]">
<input class="InputPreview" style="display: none;" type="file" form="{{ 'product-form-' | append: section.id }}">                         
<script src="{{ 'print.js' | asset_url }}"></script>
<script src="{{ 'illusion.js' | asset_url }}"></script>
