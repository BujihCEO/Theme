<link rel="stylesheet" type="text/css" href="{{ 'sometimes.css' | asset_url }}">
<div class="PickersTitle">Modelo:</div>
<div class="ProductModelBox"></div>
<div class="PickersTitle">Tamanho:</div>
<div class="ProductSizeBox"></div>
<div class="PickersTitle">Cor:</div>
<div class="ProductColorsBox"></div>
<div class="Scroll">
    <div class="Bg_Tshirt">
        <div class="Tshirt">
            <div class="Preview">
                <div class="Pr_Drag PrintTarget">
                    <div class="Pr_BG"></div>
                    <div class="Pr_ImgWrap">
                        <div class="ImgContainer" data-position="1"></div>
                        <div class="ImgContainer" data-position="2"></div>
                        <div class="ImgContainer" data-position="3"></div>
                        <div class="ImgContainer" data-position="4"></div>
                    </div>
                </div>
                <div class="ImgSelector">
                    <div class="ImgDragMove"></div>
                    <div class="ImgSizeControl"></div>
                </div>
            </div>
            <div class="Zomm_Wrap">
                <div class="Zoom_Btn In"></div>
                <div class="Zoom_Btn Out selected"></div>
            </div>
        </div>
    </div>
    <div class="Personalization">
        <div class="WRAPBTNOPTIONS">
            <div class="BtnCustom BTNOPTIONS selected">Fotos</div>
        </div>
        <div class="CustomContainer selected">
            <div class="UploadImgWrap">
                <div class="IconContainer" data-position="1">
                    <label class="iconInput" for="imgInput"></label>
                </div>
                <div class="IconContainer" data-position="2">
                    <label class="iconInput" for="imgInput"></label>
                </div>
                <div class="IconContainer" data-position="3">
                    <label class="iconInput" for="imgInput"></label>
                </div>
                <div class="IconContainer" data-position="4">
                    <label class="iconInput" for="imgInput"></label>
                </div>
            </div>
            <div class="ImgOptions">
                <div class="ImgEffect">
                    <div class="Tittle">Brilho</div>
                    <input type="range" class="threshold-slider" min="0.40" max="2" value="1" step="0.01" onchange="changeThreshold()" oninput="sliderStyle()">
                </div>
                <label class="ImgInputLabel" for="imgInput">
                    Mudar imagem
                    <div></div>
                </label>
                <input class="imgInput" id="imgInput" type="file" accept="image/*" oninput="loadNewImage()" style="display: none;">
            </div>
        </div>
    </div>
</div>
<input class="InputPrint" style="display: none;" type="file" form="{{ 'product-form-' | append: section.id }}" name="properties[_hiddenPropertyName Estampa]">
<input class="InputPreview" style="display: none;" type="file" form="{{ 'product-form-' | append: section.id }}">                         
<script src="{{ 'print.js' | asset_url }}"></script>
<script src="{{ 'potrace.js' | asset_url }}"></script>
<script src="{{ 'sometimes.js' | asset_url }}"></script>
